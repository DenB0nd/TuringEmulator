<Window x:Class="TuringMachineAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuringMachineAppWPF"
        xmlns:xctk="http://schemas/xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Turing Emulator"
        Height="450" Width="800"
        MinHeight="450" MinWidth="800"   
        WindowStartupLocation="CenterScreen"
        >

    <Grid Style="{DynamicResource ThemeBackground}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="1" 
                BorderThickness="10,0,0,0">
        </Border>

        <Grid Grid.Column="0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="3" 
                    BorderThickness="0,10,0,0"/>
            <Border Grid.Row="2" 
                    BorderThickness="5,5,5,5"/>
            <Border Grid.Row="1" 
                    BorderThickness="5,5,5,0"/>

            <Grid Grid.Row="1"
                  Style="{DynamicResource ThemeBackground}"
                   Margin="5,5,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="13*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="13*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="State: "
                           Style="{DynamicResource TextBlockTextColor}"/>
                <TextBlock Grid.Column="1"
                           Text="X"
                           Style="{DynamicResource TextBlockTextColor}"/>
                <TextBlock Grid.Column="2"
                           Text="Step: "                           
                           Style="{DynamicResource TextBlockTextColor}"/>

            </Grid>

            <Grid x:Name="TapeGrid" Grid.Row="2" 
                       Style="{DynamicResource ThemeBackground}"
                       Margin="5,5,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column ="0"
                        Content="&lt;"
                        Style="{DynamicResource LeftAndRightButtons}"/>
                <TextBox Grid.Column="1"/>
                <TextBox Grid.Column="2"/>
                <TextBox Grid.Column="3"/>
                <TextBox Grid.Column="4"/>
                <TextBox Grid.Column="5"/>
                <TextBox Grid.Column="6"/>
                <TextBox Grid.Column="7"/>
                <TextBox Grid.Column="8"/>
                <TextBox Grid.Column="9"/>
                <TextBox Grid.Column="10"/>
                <TextBox Grid.Column="11"/>
                <TextBox Grid.Column="12"/>
                <TextBox Grid.Column="13"/>
                <TextBox Grid.Column="14"/>
                <TextBox Grid.Column="15"/>
                <TextBox Grid.Column="16"/>
                <TextBox Grid.Column="17"/>
                <TextBox Grid.Column="18"/>
                <TextBox Grid.Column="19"/>
                <TextBox Grid.Column="20"/>
                <TextBox Grid.Column="21"/>
                <TextBox Grid.Column="22"/>
                <TextBox Grid.Column="23"/>
                <TextBox Grid.Column="24"/>
                <TextBox Grid.Column="25"/>
                <Button  Grid.Column="26"
                        Content="&gt;"
                        Style="{DynamicResource LeftAndRightButtons}"/>

                <Grid.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </Grid.Resources>
              
            </Grid>
            
                
        </Grid>
    </Grid>


</Window>
